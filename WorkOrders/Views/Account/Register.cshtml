@model WorkOrders.Models.Register;

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <div class="col-10 offset-1">
        <form method="post" action="Register">
            <h2 class="text-center"> Register</h2>
            <br />
            <div class = "form-group">
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" class="form-control col-12"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class = "form-group">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" class="form-control col-12"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Role"></label>
                <select asp-for="Role"  asp-items=@(new SelectList(Model.Roles, "Name", "Name")) class="form-control col-12">
                    <option value="">--- Select ---</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
                

            </div>
            <p class="col-12 text-center form-buttons"><button type="submit" class="btn btn-primary" style="width:50%">Register</button></p>
            <p class="col-12 text-center text-danger">@Html.ValidationMessage("Error")</p>
            <h4 class="col-12 text-center text-success">@Html.ValidationMessage("Success")</h4>


        </form>
   
    </div>
</div>
