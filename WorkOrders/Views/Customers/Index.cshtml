                <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-primary"><i class="fa-solid fa-info"></i></a> 
                <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-primary"><i class="fa-solid fa-trash-can"></i></a>
