@model WorkOrders.Models.ViewModels.Customers_Filter;

@{
    ViewData["Title"] = "Index";
}
<div class="text-center">
    <h1>Customers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" >Create New <i class="fa-solid fa-plus"></i></a>
</p>

</div>


<form asp-action="Index" method ="post">


    <div class="row col-12">
         <div class="form-group col-3">
            <label asp-for="Name" class="control-label"></label>
            <select   asp-for="Name" class="form-control" asp-items="Model.CustomersNames"   ></select>

         </div>

         <div class="form-group col-3">

             <label asp-for="City" class="control-label"></label>
             <select asp-for="City"  class = "form-control" asp-items="Model.CustomersCity">
                <option value ="">Please select a City</option>
            </select>
           </div>

            <div class ="form-group col-3">
             
             <label asp-for="Edb" class="control-label"></label>
             <select asp-for="Edb"  class = "form-control" asp-items="Model.CustomersEdb">
                <option value ="">Please select a City</option>
            </select>
            </div>


          
        

    </div>
    <div class="form-group col-3">
        <button type="submit" class="btn btn-primary searchButton">Search <i class="fa-solid fa-magnifying-glass"></i></button>
        </div>

</form>


