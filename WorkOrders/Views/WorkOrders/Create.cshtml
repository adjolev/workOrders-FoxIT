@model WorkOrders.Models.WorkOrder

@{
    ViewData["Title"] = "Create";
}

<h1>Create Work Order</h1>

<hr />
<div class="row col-12 container">
    
        <form asp-action="Create" class="form-style">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="row">
            <div class="form-group col-lg-3 col-md-6 col-12">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class ="form-control" asp-items=@ViewBag.Customers></select>
            </div>
            <div class="form-group col-lg-3 col-md-6 col-12">
                <label asp-for="ProjectId" class="control-label"></label>
                <select asp-for="ProjectId" class ="form-control" asp-items=@ViewBag.Projects></select>
            </div>
            <div class="form-group col-lg-3 col-md-6 col-12">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-3 col-md-6 col-12">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-3 col-md-6 col-12">
                <label asp-for="CustomerNote" class="control-label"></label>
                <input asp-for="CustomerNote" class="form-control" />
                <span asp-validation-for="CustomerNote" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-3 col-md-6 col-12">
                <label asp-for="PerformedWorks" class="control-label"></label>
                <input asp-for="PerformedWorks" class="form-control" />
                <span asp-validation-for="PerformedWorks" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-3 col-md-6 col-12">
                <label asp-for="Hours" class="control-label"></label>
                <input asp-for="Hours" class="form-control" />
                <span asp-validation-for="Hours" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-3 col-md-6 col-12">
                <label asp-for="Minutes" class="control-label"></label>
                <input asp-for="Minutes" class="form-control" />
                <span asp-validation-for="Minutes" class="text-danger"></span>
            </div>
          </div>

            <div class="row form-buttons">
              <div class="form-group col-6">
                <a  asp-action="Index" class="btn btn-outline-secondary" ><i class="fa-solid fa-circle-arrow-left"></i> Back to List</a>
              </div>

              <div class="form-group col-6 text-end">
                <button type="submit"  class="btn btn-primary">Create <i class="fa-solid fa-circle-plus"></i></button>
              </div>
            </div>

        </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
